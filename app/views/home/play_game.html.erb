


<div class="container">
  <div class="row">
    <div class="col-12 m-4">
      <h1 class="game text-center" id="<%= @game.id %>">Play Game</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-6 text-center align-middle">
      <button id="add-btn" class="m-4 btn btn-lg btn-outline-primary" onclick="postPlay()">Click me!</button>
      <%= render 'plays/plays_table' %>
    </div>

    <div class="col-6">
      <h1 id="timer" class="m-4 text-center"></h1>
      <div class="text-center">
        <img src="" id="image-holder" width="300" height="300" style="display:none;">
      </div>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'play_game' %>